<!DOCTYPE html>
<html lang="{{ htmlWebpackPlugin.options.content.lang }}">
  <head>
    {{> ../../template-partials/meta pageTranslations=htmlWebpackPlugin.options.content.translations.about_us}}
    {{> ../../template-partials/head}}
  </head>
  <body>
    {{> ../../header/header pageRoute='about'}}
    <main class="about">
      <section class="mission">
        <h2>{{ htmlWebpackPlugin.options.content.translations.home.mission.title }}</h2>
        <div class="mission-text">
          {{#each htmlWebpackPlugin.options.content.translations.home.mission.blocks}}
          {{#each this}}
          <p>{{{this}}}</p>
          {{/each}}
          {{/each}}
        </div>
      </section>
      <section class="team">
        <div class="team-slider">
          <div class="team-slider-wrapper swiper-wrapper">
            {{#each htmlWebpackPlugin.options.content.team}}
            <div class="team-slide team-member swiper-slide">
              <div class="team-member-picture-wrapper">
                <div
                  class="team-member-picture-fun"
                  style="background-image: url('/img/team-members/fun-{{ this.image }}.jpg')"
                ></div>
                <div
                  class="team-member-picture"
                  style="background-image: url('/img/team-members/{{ this.image }}.jpg')"
                ></div>
              </div>
              <div class="team-member-text">
                <div>
                  <strong class="team-member-name">
                    {{getProperty this.name ../htmlWebpackPlugin.options.content.lang}}
                    {{getProperty this.surname ../htmlWebpackPlugin.options.content.lang}}
                  </strong>
                </div>
                <div class="team-member-occupation">{{ this.occupation }}</div>
              </div>
            </div>
            {{/each}}
          </div>
          <i class="team-slider-previous fa fa-chevron-left" aria-hidden="true"></i>
          <i class="team-slider-next fa fa-chevron-right" aria-hidden="true"></i>
        </div>
      </section>
      <section class="partners">
        <h2>{{ htmlWebpackPlugin.options.content.translations.partners2 }}<sup> *</sup></h2>
        <div class="partners-list">
          {{#each htmlWebpackPlugin.options.content.partners}}
          <a href="{{ this.link }}" class="partner-icon" target="_blank" rel="noreferrer noopener">
            <img src="{{ this.imgSrc }}" alt="{{ this.title }}" />
          </a>
          {{/each}}
        </div>
        <div class="partnership-rules">
          <p>{{ htmlWebpackPlugin.options.content.translations.partnership_rules_p1 }}</p>
          <p>{{ htmlWebpackPlugin.options.content.translations.partnership_rules_p2 }}</p>
        </div>
      </section>
      {{> ../../template-partials/question-form/question-form page='about'}}
    </main>
    {{> ../../footer/footer}}
  </body>
</html>
