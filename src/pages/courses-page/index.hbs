<!DOCTYPE html>
<html lang="{{ htmlWebpackPlugin.options.content.lang }}">
  <head>
    {{> ../../template-partials/meta pageTranslations=htmlWebpackPlugin.options.content.translations.courses}}
    {{> ../../template-partials/head}}
  </head>
  <body>
    {{> ../../header/header pageRoute='courses'}}
    <main class="courses">
      <section class="faq">
        <h2>{{ htmlWebpackPlugin.options.content.translations.teens.faq.title }}</h2>
        <ul class="accordion">
          {{#each htmlWebpackPlugin.options.content.translations.teens.faq.questions }}
          <li>
            <details open>
              <summary>
                <span class="text">{{ this.question }}</span>
                <i class="fa fa-chevron-right text-green" aria-hidden="true"></i>
              </summary>
              <div class="content">
                <p>{{{ this.answer }}}</p>
              </div>
            </details>
          </li>
          {{/each}}
        </ul>
      </section>
      {{> ../../template-partials/question-form/question-form page='courses'}}
    </main>
    {{> ../../footer/footer}}
  </body>
</html>
