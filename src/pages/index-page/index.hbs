<!DOCTYPE html>
<html lang="{{ htmlWebpackPlugin.options.content.lang }}">
  <head>
    {{> ../../template-partials/meta pageTranslations=htmlWebpackPlugin.options.content.translations.home}}
    {{> ../../template-partials/head}}
  </head>
  <body>
    {{> ../../header/header}}
    <main>
      <section class="banner">
        <div class="container">
          <h1 class="banner-title">
            {{ htmlWebpackPlugin.options.content.translations.home.intro.title }}
          </h1>
          <ul class="banner-list">
            <li class="banner-list-item">
              <i class="fa fa-check"></i>
              {{ htmlWebpackPlugin.options.content.translations.home.intro.item1 }}
            </li>
            <li class="banner-list-item">
              <i class="fa fa-check"></i>
              {{{ htmlWebpackPlugin.options.content.translations.home.intro.item2 }}}
            </li>
            <li class="banner-list-item">
              <i class="fa fa-check"></i>
              {{ htmlWebpackPlugin.options.content.shppAge }}
            </li>
          </ul>
          <div class="banner-courses">
            <a
              class="banner-course"
              href="{{ htmlWebpackPlugin.options.content.langPrefix }}/courses/adults"
            >
              <h3 class="banner-course-type">
                {{ htmlWebpackPlugin.options.content.translations.home.intro.courses.adults.title }}
              </h3>
              <span class="banner-course-tip">{{
                htmlWebpackPlugin.options.content.translations.home.intro.courses.adults.tip
              }}</span>
              <span class="banner-course-date"
                >{{ htmlWebpackPlugin.options.content.translations.home.intro.courses.adults.start
                }}{{ htmlWebpackPlugin.options.content.startDate }}</span
              >
            </a>
            <a
              class="banner-course"
              href="{{ htmlWebpackPlugin.options.content.langPrefix }}/courses#teens"
            >
              <h3 class="banner-course-type">
                {{ htmlWebpackPlugin.options.content.translations.home.intro.courses.teens.title }}
              </h3>
              <span class="banner-course-tip">{{
                htmlWebpackPlugin.options.content.translations.home.intro.courses.teens.age
              }}</span>
            </a>
          </div>
        </div>
      </section>
      <section class="war">
        <div class="war-container container">
          <h2 class="war-title">
            {{ htmlWebpackPlugin.options.content.translations.home.war.title }}
          </h2>
          <div class="war-text">
            {{#each htmlWebpackPlugin.options.content.translations.home.war.p}}
            <p>{{{this}}}</p>
            {{/each}}
          </div>
        </div>
      </section>
      <section class="about-us">
        <div class="about-us-container container">
          <h2 class="about-us-title">
            {{ htmlWebpackPlugin.options.content.translations.home.about.title }}
          </h2>
          <div class="about-us-text">
            {{#each htmlWebpackPlugin.options.content.translations.courses_p }}
            <p>{{{ this }}}</p>
            {{/each}}
          </div>
        </div>
      </section>
      <section class="feedbacks vue-container">
        <h2 class="feedbacks-title">
          {{ htmlWebpackPlugin.options.content.translations.home.feedbacks.title }}
        </h2>
        <div class="feedbacks-container container">
          <div class="feedbacks-slider-container">
            <div class="swiper feedbacks-slider" ref="sliderRef">
              <div class="swiper-wrapper">
                <div class="feedbacks-slide swiper-slide" v-for="(feedback, index) in feedbacks">
                  <header class="feedbacks-slide-header">
                    <img
                      class="feedbacks-slide-image"
                      :src="getImage(feedback)"
                      :alt="getName(feedback)"
                    />
                    <a class="feedbacks-slide-name-link" :href="feedback.link" target="_blank">
                      <strong>\{{ getName(feedback) }}</strong>
                    </a>
                  </header>
                  <p class="feedbacks-slide-text" v-if="!isLongText(feedback.message)">
                    \{{ feedback.message }}
                  </p>
                  <p class="feedbacks-slide-text" v-else>
                    \{{
                      shouldShowFullText(index) ? feedback.message : getShortText(feedback.message)
                    }}
                    <br />
                    <a
                      class="feedbacks-slide-link"
                      v-if="!shouldShowFullText(index)"
                      @click="more(index)"
                      >{{ htmlWebpackPlugin.options.content.translations.read_more }}</a
                    >
                  </p>
                </div>
              </div>
            </div>
            <i class="feedbacks-slider-previous fa fa-chevron-left" aria-hidden="true"></i>
            <i class="feedbacks-slider-next fa fa-chevron-right" aria-hidden="true"></i>
          </div>
          <div class="swiper-pagination"></div>
          <div class="feedbacks-buttons">
            <a
              href="{{ htmlWebpackPlugin.options.content.langPrefix }}/feedback-form"
              class="feedbacks-buttons-leave-your-feedback button-primary"
              >{{ htmlWebpackPlugin.options.content.translations.feedback_button }}</a
            >
            <a
              href="{{ htmlWebpackPlugin.options.content.langPrefix }}/feedback-all"
              class="feedbacks-buttons-watch-all-responses"
              >{{ htmlWebpackPlugin.options.content.translations.adults.feedbacks.see_all }}</a
            >
          </div>
        </div>
      </section>
      <section class="blog-posts vue-container">
        <div class="container">
          <h2>{{ htmlWebpackPlugin.options.content.translations.home.latest_news.title }}</h2>
          <ul>
            <li v-for="post in blogPosts">
              <img v-if="getImage(post)" :src="getImage(post)" alt="" />
              <h3>
                <a :href="post.link">\{{ post.title.rendered }}</a>
              </h3>
              <div v-html="post.excerpt.rendered"></div>
              <span class="date">\{{ post.date.split('T')[0] }}</span>
            </li>
          </ul>
          <div class="more-posts-container">
            <a class="more-posts" href="https://blog.programming.org.ua">
              {{ htmlWebpackPlugin.options.content.translations.home.latest_news.see_all }}
            </a>
          </div>
        </div>
      </section>
      <section class="manifesto">
        <div class="container">
          <h2>
            {{{ htmlWebpackPlugin.options.content.translations.good_school_manifesto.title }}}
          </h2>

          <ul>
            {{#each htmlWebpackPlugin.options.content.translations.good_school_manifesto.p }}
            <li>
              <details>
                <summary>
                  <span class="text">{{{ this.title }}}</span>
                  <i class="fa fa-chevron-right text-green" aria-hidden="true"></i>
                </summary>
                <div class="content">
                  <p>{{{ this.description }}}</p>
                  {{#each this.blocks }}
                  <div>
                    <p>
                      <strong>{{{ this.headline }}}</strong>
                    </p>
                    {{#each this.p }}
                    <p>âœ… {{{ this }}}</p>
                    {{/each}}
                  </div>
                  {{/each}}
                </div>
              </details>
            </li>
            {{/each}}
          </ul>
        </div>
      </section>
      <section class="partners">
        <div class="partners-slider">
          <div class="partners-slider-wrapper swiper-wrapper">
            {{#each htmlWebpackPlugin.options.content.partners}}
            <div class="partners-slide swiper-slide">
              <a
                target="_blank"
                href="{{ this.link }}"
                class="partners-slide-link"
                rel="noopener noreferrer"
              >
                <img class="partners-slide-image" src="{{ this.imgSrc }}" alt="{{ this.title }}" />
              </a>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
    </main>
    {{> ../../footer/footer}}
  </body>
</html>
