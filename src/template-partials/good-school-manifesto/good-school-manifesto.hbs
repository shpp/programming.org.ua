<section class="manifesto">
  <div class="container">
    <h2>{{{ htmlWebpackPlugin.options.content.translations.good_school_manifesto.title }}}</h2>

    <ul class="accordion">
      {{#each htmlWebpackPlugin.options.content.translations.good_school_manifesto.p }}
      <li>
        <details>
          <summary>
            <span class="text">{{{ this.title }}}</span>
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
          </summary>
          <div class="content">
            <p>{{{ this.description }}}</p>
            {{#each this.blocks }}
            <div>
              <p>
                <strong>{{{ this.headline }}}</strong>
              </p>
              {{#each this.p }}
              <p>âœ… {{{ this }}}</p>
              {{/each}}
            </div>
            {{/each}}
          </div>
        </details>
      </li>
      {{/each}}
    </ul>
  </div>
</section>
